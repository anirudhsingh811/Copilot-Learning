<Window x:Class="WPF_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Interview Concepts Demo" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="WPF Concepts" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Button Content="1. Converters" Style="{StaticResource ModernButtonStyle}"
                            Click="Converters_Click"/>
                    <Button Content="2. Styles" Style="{StaticResource ModernButtonStyle}"
                            Click="Styles_Click"/>
                    <Button Content="3. Resources" Style="{StaticResource ModernButtonStyle}"
                            Click="Resources_Click"/>
                    <Button Content="4. Async Operations" Style="{StaticResource ModernButtonStyle}"
                            Click="Async_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Content Area -->
        <ContentControl x:Name="ContentArea" Grid.Column="1" Margin="20"/>
    </Grid>
</Window>
