<UserControl x:Class="WPF_APP.Views.StylesDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Base Style -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Style Inheritance -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Control Template -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Data Template -->
        <DataTemplate x:Key="PersonDataTemplate">
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="5">
                <StackPanel>
                    <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding FirstName, StringFormat='First: {0}'}" 
                              Foreground="Gray" FontSize="11"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="Styles &amp; Templates Demo" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="Key Concepts:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                - Styles for consistent appearance<LineBreak/>
                - Style inheritance (BasedOn)<LineBreak/>
                - Control Templates for custom look<LineBreak/>
                - Data Templates for custom data display<LineBreak/>
                - Triggers (Property, Data, Event, MultiTrigger)<LineBreak/>
                - Template binding<LineBreak/>
                - Visual State Manager
            </TextBlock>
            
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Style Inheritance" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Base Style" Style="{StaticResource BaseButtonStyle}"/>
                    <Button Content="Primary Style (Inherited)" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Control Template with Triggers" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Round Button" Style="{StaticResource RoundButtonStyle}"/>
                    <Button Content="Another Round Button" Style="{StaticResource RoundButtonStyle}"/>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Triggers Example" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="TriggerTextBox" Padding="5" Margin="0,0,0,5"/>
                    <TextBlock Text="Type 'error' to see trigger">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=TriggerTextBox, Path=Text}" Value="error">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Text" Value="ERROR DETECTED!"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Implicit Style (Applied to all TextBlocks in scope)" 
                              FontWeight="Bold" Margin="0,0,0,10"/>
                    <Border BorderBrush="Orange" BorderThickness="2" Padding="15">
                        <Border.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Orange"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </Border.Resources>
                        <StackPanel>
                            <TextBlock Text="This has implicit style"/>
                            <TextBlock Text="This also has implicit style"/>
                            <TextBlock Text="All TextBlocks here are styled"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="#FFB900" BorderThickness="2" Background="#FFFEF5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Style Definition Example:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" FontFamily="Consolas" FontSize="11">
                        &lt;Style x:Key="MyStyle" TargetType="Button"&gt;<LineBreak/>
                          &lt;Setter Property="Background" Value="Blue"/&gt;<LineBreak/>
                          &lt;Style.Triggers&gt;<LineBreak/>
                            &lt;Trigger Property="IsMouseOver" Value="True"&gt;<LineBreak/>
                              &lt;Setter Property="Background" Value="Red"/&gt;<LineBreak/>
                            &lt;/Trigger&gt;<LineBreak/>
                          &lt;/Style.Triggers&gt;<LineBreak/>
                        &lt;/Style&gt;
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>



