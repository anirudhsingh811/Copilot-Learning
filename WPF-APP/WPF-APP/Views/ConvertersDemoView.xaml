<UserControl x:Class="WPF_APP.Views.ConvertersDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WPF_APP.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:StringToUpperConverter x:Key="StringToUpperConverter"/>
        <converters:FullNameConverter x:Key="FullNameConverter"/>
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock Text="Value Converters Demo" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Text="Key Concepts:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
            - IValueConverter interface<LineBreak/>
            - IMultiValueConverter for multiple bindings<LineBreak/>
            - Convert and ConvertBack methods<LineBreak/>
            - StringFormat in bindings<LineBreak/>
            - Custom converter implementations
        </TextBlock>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Bool to Visibility Converter" FontWeight="Bold" Margin="0,0,0,10"/>
                <CheckBox IsChecked="{Binding IsEnabled}" Content="Show Panel" Margin="0,0,0,10"/>
                <Border Background="LightBlue" Padding="20"
                       Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="This panel is visible when checkbox is checked" 
                              FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </Border>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Inverse Bool Converter" FontWeight="Bold" Margin="0,0,0,10"/>
                <CheckBox IsChecked="{Binding IsEnabled}" Content="Enable" Margin="0,0,0,10"/>
                <Button Content="Disabled when checked" 
                       IsEnabled="{Binding IsEnabled, Converter={StaticResource InverseBoolConverter}}"
                       Style="{StaticResource ModernButtonStyle}" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="String to Upper Converter" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                        Padding="5" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding InputText, Converter={StaticResource StringToUpperConverter}}" 
                          FontSize="16" Foreground="Blue"/>
            </StackPanel>
        </Border>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="MultiValueConverter (Full Name)" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                        Padding="5" Margin="0,0,0,5"/>
                <TextBlock Text="First Name" Foreground="Gray" FontSize="11" Margin="0,0,0,10"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                        Padding="5" Margin="0,0,0,5"/>
                <TextBlock Text="Last Name" Foreground="Gray" FontSize="11" Margin="0,0,0,10"/>
                
                <TextBlock FontSize="16" Foreground="Green">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource FullNameConverter}">
                            <Binding Path="FirstName"/>
                            <Binding Path="LastName"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15">
            <StackPanel>
                <TextBlock Text="StringFormat (No Converter Needed)" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                        Padding="5" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding InputText, StringFormat='Formatted: {0}'}" />
                <TextBlock Text="{Binding InputText, StringFormat='Upper case: \{0\}', 
                                  Converter={StaticResource StringToUpperConverter}}" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>


